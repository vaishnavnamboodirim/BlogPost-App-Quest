<%- include('partials/head', {title:title}) -%>
    <%- include('partials/nav', {nav: nav}) -%>
        <main class="container my-4">
            <h1>Blog List</h1>
            <hr />
            <div class="row">
                <% blogs.forEach( blog=> {
                    %>
                    <div class="col-12 col-md-6 col-lg-4 d-flex align-items-stretch my-3">
                        <div class="card p-4">
                            <img src="<%= blog.imageurl %>" class="card-img-top" alt="<%= blog.title%>">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= blog.title%>
                                </h5>
                                <div class="card-text">
                                    <div>
                                        <%= blog.name %>
                                    </div>
                                    <div>
                                        <%= blog.comment %>
                                    </div>
                                    <div>
                                        <%= blog.abstract %>
                                    </div>
                                    <div>
                                        <%= blog.body%>
                                    </div>
                                    <div>
                                        <%= blog.comments%>
                                    </div>
                                    <div>
                                        <%= blog.createdAt%>
                                    </div>
                                </div>
                                <a href="<%= '/blog/'+ blog.id%>" class="btn btn-primary">Know more</a>
                            </div>
                        </div>
                    </div>
                    <% } ); %>
                    

            </div>
        </main>
        <%- include('partials/foot') -%>